{
  "name": "soron-recorder",
  "version": "1.0.0",
  "description": "Professional video recording with AI personalization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.soron.recorder",
    "productName": "Soron Recorder",
    "mac": {
      "category": "public.app-category.video",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Soron needs microphone access to record audio",
        "NSCameraUsageDescription": "Soron needs camera access to record video",
        "NSScreenCaptureDescription": "Soron needs screen recording permission"
      }
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "**/*",
      "!node_modules/.cache"
    ]
  },
  "keywords": ["video", "recording", "loom", "personalization", "ai"],
  "author": "Soron",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0"
  }
}
